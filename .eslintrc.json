{
	"extends": "wikimedia",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": "5"
	},
	"env": {
		"browser": true,
		"jquery": true,
		"commonjs": true,
		"qunit": true
	},
	"globals": {
		"mediaWiki": false,
		"OO": false,
		"moment": false,
		"Redux": false,
		"ReduxThunk": false
	},
	"rules": {
		"dot-notation": [ "error", { "allowKeywords": true } ],
		"no-use-before-define": 0,
		"no-var": 2,
		"prefer-const": 1,
		"one-var": 0, // Interferes with prefer-const.
		"max-len": [
				"warn",
				{
					"tabWidth": 2,
					// Exclude by default:
					// - `eslint-` directives. To avoid having to disable
					//   eslint for a long eslint-disable line.
					"ignorePattern": "^// eslint-.+",
					"ignoreUrls": true,
					"ignoreComments": false,
					"ignoreRegExpLiterals": true,
					"ignoreStrings": true,
					"ignoreTemplateLiterals": true
				}
		]
	}
}
